<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    
    xmlns:local="clr-namespace:FinalProject"
    xmlns:pages="clr-namespace:FinalProject.Pages"
    
    Shell.FlyoutBehavior="Disabled"
    Title="FinalProject">

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:OpeningScreen}"
        Shell.NavBarIsVisible="false"/>

    <ShellContent
        Title=""
        Route="Register"
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Shell.NavBarIsVisible="false"/>

    <ShellContent
        Title=""
        ContentTemplate="{DataTemplate pages:AppMainPage}"
        />

</Shell>
