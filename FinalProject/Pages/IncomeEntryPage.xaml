<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.Pages.IncomeEntryPage"
             BackgroundColor="#FFFFFF">

    <VerticalStackLayout VerticalOptions="Center" Padding="20, 0, 20, 0">
        <Frame BackgroundColor="#efefef" BorderColor="#c6c6c6">
            <VerticalStackLayout Spacing="20">
                <Label Text="Enter Your Income:"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       />

                <Entry x:Name="IncomeEntry"
                        TextColor="Black"
                        Keyboard="Numeric"
                        Placeholder="Ex: 22104"
                        BackgroundColor="Transparent"
                        />

                <Button x:Name="confirmIncome"
                    Text="Confirm"
                    TextColor="white"
                    BackgroundColor="#f5940d"
                    CornerRadius="22"
                    WidthRequest="180"
                    Clicked="confirmIncome_Clicked"/>

            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>